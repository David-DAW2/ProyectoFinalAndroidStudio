<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fotoMed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicina_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la medicina"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/medicina_formato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formato de la medicina"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/medicina_laboratorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laboratorio de la medicina"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
